@model IEnumerable<Registration.Models.Course>

@{
    ViewData["Title"] = "Index";
}

<div class="grid grid-cols-3 rounded-box shadow-lg">
    <div class="card col-span-2">
        <div class="card-body">
            <div class="card-title">Courses</div>
            <table class="table w-full table-compact table-zebra">
                <thead>
                    <tr>
                        <th>
                            Course Number
                        </th>
                        <th>
                            Name
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr class="hover">
                            <td>
                                <a class="link" asp-action="Details" asp-route-id="@item.CourseId">@item.FullCourseNumber()</a>
                            </td>
                            <td>
                                @item.Name
                            </td>
                            <td class="text-right">
                                <a class="btn btn-sm" asp-action="Edit" asp-route-id="@item.CourseId">Edit</a>
                                <a class="btn btn-sm" asp-action="Delete" asp-route-id="@item.CourseId">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <div class="divider"></div>
            <div class="justify-end">
                <a class="btn btn-primary" asp-action="Create">Add Course</a>
            </div>
        </div>
    </div>
</div>